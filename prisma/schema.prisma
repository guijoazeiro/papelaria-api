// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstname String?
  lastname  String?
  email     String   @unique
  password  String
  role      Role     @default(USER)
  creadetAt DateTime @default(now())

  Order Order[]
  @@map("users")
}

model Category {
  id           String   @id @default(uuid())
  name         String
  abbreviation String   @unique
  createdAt    DateTime @default(now())

  Product Product[]
  @@map("categories")
}

model Supplier {
  id        String   @id @default(uuid())
  name      String
  cnpj      String   @unique
  createdAt DateTime @default(now())

  Product Product[]
  @@map("suppliers")
}

model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  url         String   @unique
  price       Decimal
  stock       Int
  image       String?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  supplierId  String
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  createdAt   DateTime @default(now())


  Order Order[]
  @@map("products")
}

model Order {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  quantity   Int
  amount     Int      @default(1)
  totalPrice Decimal
  status     Status   @default(PENDING)
  createdAt  DateTime @default(now())

  @@map("orders")
}

enum Role {
  ADMIN
  USER
}

enum Status {
  PENDING
  PAID
  CANCELLED
}
